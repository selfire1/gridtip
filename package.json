{
  "name": "f1-tipping-react",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --port=4848",
    "dev:prod": "NODE_ENV=production next dev --turbopack --port=4848",
    "prebuild": "bun run scripts/save-avatars.ts",
    "build": "next build",
    "db:dump": "turso db shell f1-tipping .dump > dump.sql && rm local.db && cat dump.sql | sqlite3 local.db",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:prod:generate": "bun --env-file=.env.production run db:generate",
    "db:prod:migrate": "bun --env-file=.env.production run db:migrate",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "update-tips": "bun run --env-file=.env.production scripts/_local/add-tips"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@libsql/client": "^0.15.14",
    "@paralleldrive/cuid2": "^2.2.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-table": "^8.21.3",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.3.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "lucide-react": "^0.542.0",
    "marked": "^16.4.0",
    "next": "15.5.7",
    "next-themes": "^0.4.6",
    "ofetch": "^1.4.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
